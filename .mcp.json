{
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena.git",
        "serena-mcp-server"
      ]
    },
    "zotero": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/54yyyu/zotero-mcp.git",
        "zotero-mcp"
      ],
      "env": {
        "ZOTERO_LOCAL": "true"
      }
    }
  }
}
